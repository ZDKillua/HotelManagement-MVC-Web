                                        <option value="LP02">PHÒNG 2 NGƯỜI</option>
                                        <option value="LP03">PHÒNG 4 NGƯỜI</option>
                                    </select>
                                    <span class="select-arrow"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-btn">
                            <button class="submit-btn" type="submit">Check</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </header>

    <div class="mt-5">
        <div class="container-fluid w-75 m-auto">
            <h1 class="uppercase hero-title mb-5 w-25">
                <span class="underline">Thông tin</span>
            </h1>
            <div class="row">
