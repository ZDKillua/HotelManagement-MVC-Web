        <span>Nguyễn Chánh Bảo - 2001181020</span><br />
        <span>Vũ Hoàng Quân - 2001181277</span>
    </div>

    <script>
      const navbar = document.querySelector(".navbar-bg");
      const loginContainer = document.querySelector(".login-container");
      window.addEventListener("scroll", () => {
        if (window.scrollY - navbar.scrollHeight >= 0) {
          navbar.classList.add("nav-container");
          loginContainer.remove();
        } else {
          navbar.classList.remove("nav-container");
          navbar.prepend(loginContainer);
        }
      });
    </script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
